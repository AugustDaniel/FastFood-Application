<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:maxHeight="100dp">

    <TextView
        android:id="@+id/row_lap_rv_placement_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/super_brigade"
        android:text="nd"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/row_lap_rv_placement_guideline"
        app:layout_constraintEnd_toEndOf="@id/row_lap_rv_name_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/row_lap_rv_yellow_border"
        android:layout_marginVertical="32dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/row_lap_rv_name_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/super_brigade"
        android:text="name"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/row_lap_rv_name_guideline"
        app:layout_constraintEnd_toEndOf="@id/row_lap_rv_lap_guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/row_lap_rv_yellow_border"
        android:layout_marginVertical="32dp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/row_lap_rv_score_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/super_brigade"
        android:text="score"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="@id/row_lap_rv_lap_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/row_lap_rv_yellow_border"
        android:layout_marginVertical="32dp"
        android:textColor="@color/white" />

    <View
        android:id="@+id/row_lap_rv_yellow_border"
        android:layout_width="400dp"
        android:layout_height="1dp"
        android:layout_marginTop="13dp"
        android:background="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row_lap_rv_placement_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row_lap_rv_name_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/row_lap_rv_lap_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />
</androidx.constraintlayout.widget.ConstraintLayout>